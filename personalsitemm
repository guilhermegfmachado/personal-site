                teacher: "Professeur",
                teacherDesc: "Découvrez mon expérience d'enseignement.",
                translator: "Traducteur",
                translatorDesc: "Découvrez mon expérience de traduction.",
                musician: "Musicien",
                musicianDesc: "Découvrez mon expérience musicale."
            },
            it: {
                header: "Guilherme Machado",
                location: "Con sede a Torres Vedras, Portogallo",
                email: "guilherme@example.com",
                teacher: "Insegnante",
                teacherDesc: "Esplora la mia esperienza di insegnamento.",
                translator: "Traduttore",
                translatorDesc: "Esplora la mia esperienza di traduzione.",
                musician: "Musicista",
                musicianDesc: "Esplora la mia esperienza musicale."
            },
            pt: {
                header: "Guilherme Machado",
                location: "Sediado em Torres Vedras, Portugal",
                email: "guilherme@example.com",
                teacher: "Professor",
                teacherDesc: "Explore minha experiência de ensino.",
                translator: "Tradutor",
                translatorDesc: "Explore minha experiência de tradução.",
                musician: "Músico",
                musicianDesc: "Explore minha experiência musical."
            },
            zh: {
                header: "Guilherme Machado",
                location: "位于葡萄牙托雷斯韦德拉什",
                email: "guilherme@example.com",
                teacher: "教师",
                teacherDesc: "探索我的教学经验。",
                translator: "翻译",
                translatorDesc: "探索我的翻译经验。",
                musician: "音乐家",
                musicianDesc: "探索我的音乐经验。"
            }
        };

        function changeLanguage(lang) {
            localStorage.setItem('language', lang);
            document.getElementById('header-title').textContent = translations[lang].header;
            document.getElementById('header-location').textContent = translations[lang].location;
            document.getElementById('header-email').textContent = translations[lang].email;
            document.getElementById('rect-teacher').textContent = translations[lang].teacher;
            document.getElementById('rect-teacher-desc').textContent = translations[lang].teacherDesc;
            document.getElementById('rect-translator').textContent = translations[lang].translator;
            document.getElementById('rect-translator-desc').textContent = translations[lang].translatorDesc;
            document.getElementById('rect-musician').textContent = translations[lang].musician;
            document.getElementById('rect-musician-desc').textContent = translations[lang].musicianDesc;

            // Update active class
            document.querySelectorAll('.lang-selector a').forEach(link => {
                link.classList.remove('active');
            });
            document.getElementById(`lang-${lang}`).classList.add('active');
        }

        // Load saved language or default to English
        const savedLang = localStorage.getItem('language') || 'en';
        changeLanguage(savedLang);
    </script>
